{
    "configurations": [
        {
            "type": "java",
            "name": "FileCleanerJob",
            "request": "launch",
            "mainClass": "com.lordorb.filecleaner.FileCleanerJob",
            "projectName": "FileCleaner"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/bin/www",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
